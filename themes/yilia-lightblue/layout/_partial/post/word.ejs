<div style="margin-top:10px;">
    <span class="post-time">
      <span class="post-meta-item-icon">
        <i class="fa fa-keyboard-o"></i>
        <span class="post-meta-item-text" style="font-size: 15px;color: #08c">  字数统计: </span>
        <span class="post-count" style="font-size: 15px;color: #08c"><%= wordcount(post.content) %>字</span>
      </span>
    </span>
    
    <span class="post-time">
      &nbsp; | &nbsp;
      <span class="post-meta-item-icon">
        <i class="fa fa-hourglass-half"></i>
        <span class="post-meta-item-text" style="font-size: 15px;color: #08c">  阅读时长: </span>
        <span class="post-count" style="font-size: 15px;color: #08c"><%= min2read(post.content) %>分</span>
      </span>
    </span>
</div>